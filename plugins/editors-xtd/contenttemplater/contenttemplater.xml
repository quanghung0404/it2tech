<?xml version="1.0" encoding="utf-8"?>
<extension version="3.4" type="plugin" group="editors-xtd" method="upgrade">
	<name>plg_editors-xtd_contenttemplater</name>
	<description>PLG_EDITORS-XTD_CONTENTTEMPLATER_DESC</description>
	<version>5.1.6PRO</version>
	<creationDate>December 2015</creationDate>
	<author>NoNumber (Peter van Westen)</author>
	<authorEmail>peter@nonumber.nl</authorEmail>
	<authorUrl>https://www.nonumber.nl</authorUrl>
	<copyright>Copyright Â© 2015 NoNumber All Rights Reserved</copyright>
	<license>http://www.gnu.org/licenses/gpl-2.0.html GNU/GPL</license>

	<scriptfile>script.install.php</scriptfile>

	<updateservers>
		<server type="extension" priority="1" name="NoNumber Content Templater">
			http://download.nonumber.nl/updates.xml?e=contenttemplater&amp;pro=1&amp;type=.xml
		</server>
	</updateservers>

	<files>
		<filename plugin="contenttemplater">contenttemplater.php</filename>
		<filename>popup.php</filename>
		<filename>helper.php</filename>
		<filename>script.install.helper.php</filename>
		<folder>language</folder>
	</files>

	<config>
		<fields name="params" addfieldpath="/plugins/system/nnframework/fields">
			<fieldset name="description">
				<field name="@loadlanguage_nnframework" type="nn_loadlanguage" extension="plg_system_nnframework" />
				<field name="@loadlanguage" type="nn_loadlanguage" extension="plg_editors-xtd_contenttemplater" />
				<field name="@license" type="nn_license" extension="CONTENT_TEMPLATER" />
				<field name="@version" type="nn_version" extension="CONTENT_TEMPLATER" />
				<field name="@dependency1" type="nn_dependency"
					   label="CT_THE_COMPONENT"
					   file="/administrator/components/com_contenttemplater/contenttemplater.php" />
				<field name="@dependency2" type="nn_dependency"
					   label="CT_THE_SYSTEM_PLUGIN"
					   file="/plugins/system/contenttemplater/contenttemplater.php" />
				<field name="@header" type="nn_header"
					   label="CONTENT_TEMPLATER"
					   description="CONTENT_TEMPLATER_DESC"
					   url="https://www.nonumber.nl/contenttemplater" />

				<field name="@notice_settings" type="nn_plaintext"
					   description="CT_SETTINGS,&lt;a href=&quot;index.php?option=com_contenttemplater&quot; target=&quot;_blank&quot;&gt;,&lt;/a&gt;" />
			</fieldset>
		</fields>
	</config>
</extension>
