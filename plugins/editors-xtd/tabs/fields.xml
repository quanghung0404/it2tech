<?xml version="1.0" encoding="utf-8"?>
<config addfieldpath="/plugins/system/nnframework/fields">
	<fieldset name="tab_notice">
		<field name="@toggler_title_empty_a" type="nn_toggler" param="tab_xxx_title" value="" />
		<field name="@notice_title_empty" type="note" description="TAB_TITLE_EMPTY" />
		<field name="@toggler_title_empty_b" type="nn_toggler" />
	</fieldset>

	<fieldset name="tab_params">
		<field name="default" type="radio" class="btn-group" default="0" label="TAB_DEFAULT" description="TAB_DEFAULT_DESC">
			<option value="0" style="display:none;">JNO</option>
			<option value="1">JYES</option>
		</field>
		<field name="alias" type="text" label="JFIELD_ALIAS_LABEL" description="TAB_ALIAS_DESC" />
		<field name="class" type="text" label="NN_CSS_CLASS" description="NN_CSS_CLASS_DESC" />
		<field name="scroll" type="radio" class="btn-group" default="" label="TAB_SCROLL" description="TAB_SCROLL_DESC">
			<option value="">JDEFAULT</option>
			<option value="noscroll">JNO</option>
			<option value="scroll">JYES</option>
		</field>
		<field name="access" type="accesslevel" default="" label="JFIELD_ACCESS_LABEL" description="JFIELD_ACCESS_DESC">
			<option value="">JALL</option>
		</field>
		<field name="usergroup" type="usergrouplist" default="" label="NN_USER_GROUPS" description="NN_USER_GROUPS_DESC">
			<option value="">JALL</option>
		</field>
	</fieldset>

	<fieldset name="params">
		<field name="color_inactive_handles" type="radio" class="btn-group" default="" label="TAB_COLOR_INACTIVE_HANDLES"
			   description="TAB_COLOR_INACTIVE_HANDLES_DESC">
			<option value="">JDEFAULT</option>
			<option value="0">JNO</option>
			<option value="1">JYES</option>
		</field>
		<field name="outline_handles" type="radio" class="btn-group" default="" label="TAB_OUTLINE_HANDLES" description="TAB_OUTLINE_HANDLES_DESC">
			<option value="">JDEFAULT</option>
			<option value="0">JNO</option>
			<option value="1">JYES</option>
		</field>
		<field name="outline_content" type="radio" class="btn-group" default="" label="TAB_OUTLINE_CONTENT" description="TAB_OUTLINE_CONTENT_DESC">
			<option value="">JDEFAULT</option>
			<option value="0">JNO</option>
			<option value="1">JYES</option>
		</field>
		<field name="positioning" type="radio" class="btn-group" default="" label="TAB_POSITIONING_HANDLES" description="TAB_POSITIONING_HANDLES_DESC">
			<option value="">JDEFAULT</option>
			<option value="top">NN_TOP</option>
			<option value="bottom">NN_BOTTOM</option>
			<option value="left">JGLOBAL_LEFT</option>
			<option value="right">JGLOBAL_RIGHT</option>
		</field>
		<field name="alignment" type="radio" class="btn-group" default="" label="TAB_ALIGNMENT_HANDLES" description="TAB_ALIGNMENT_HANDLES_DESC">
			<option value="">JDEFAULT</option>
			<option value="left">&lt;span class="nnicon-paragraph-left">&lt;/span></option>
			<option value="right">&lt;span class="nnicon-paragraph-right">&lt;/span></option>
			<option value="center">&lt;span class="nnicon-paragraph-center">&lt;/span></option>
			<option value="justify">&lt;span class="nnicon-paragraph-justify">&lt;/span></option>
		</field>
		<field name="nested" type="radio" class="btn-group" default="0" label="TAB_NESTED_SET" description="TAB_NESTED_SET_DESC">
			<option value="0">JNO</option>
			<option value="1">JYES</option>
		</field>
		<field name="@toggler_nested_a" type="nn_toggler" param="tab_1_nested" value="1" />
		<field name="nested_id" type="text" class="btn-group" default="nested" label="TAB_NESTED_ID" description="TAB_NESTED_ID_DESC" />
		<field name="@toggler_nested_b" type="nn_toggler" />
	</fieldset>
</config>
