<?xml version="1.0" encoding="utf-8"?>
<extension version="3.0" type="plugin" group="jsnimageshow"
	method="upgrade">
	<name>Theme Pile</name>
	<version>1.0.2</version>
	<creationDate>03/24/2016</creationDate>
	<copyright>Copyright (C) @JOOMLASHINECOPYRIGHTYEAR@ JoomlaShine.com. All Rights Reserved.</copyright>
	<license>GNU/GPL v2 http://www.gnu.org/licenses/gpl-2.0.html</license>
	<author>JoomlaShine Team</author>
	<authorEmail>support@joomlashine.com</authorEmail>
	<authorUrl>http://www.joomlashine.com</authorUrl>
	<description>JSN IMAGESHOW SHOWCASE THEME PILE PLUGIN</description>
	<files>
		<filename plugin="themepile">themepile.php</filename>
		<filename plugin="themepile">install.mysql.sql</filename>
		<filename plugin="themepile">uninstall.mysql.sql</filename>
		<filename plugin="themepile">install.sqlsrv.sql</filename>
		<filename plugin="themepile">uninstall.sqlsrv.sql</filename>
        <filename plugin="themepile">install.class.php</filename>
		<folder>assets</folder>
		<folder>classes</folder>
		<folder>helper</folder>
		<folder>languages</folder>
		<folder>models</folder>
		<folder>tables</folder>
		<folder>views</folder>
		<folder>sql</folder>
	</files>
	<install>
		<sql>
			<file charset="utf8" driver="mysql">install.mysql.sql</file>
			<file charset="utf8" driver="sqlsrv">install.sqlsrv.sql</file>
		</sql>
	</install>
	<uninstall>
		<sql>
			<file charset="utf8" driver="mysql">uninstall.mysql.sql</file>
			<file charset="utf8" driver="sqlsrv">uninstall.sqlsrv.sql</file>
		</sql>
	</uninstall>
	<scriptfile>install.class.php</scriptfile>
    <update>
        <schemas>
            <schemapath type="mysql">sql/updates/mysql</schemapath>
            <schemapath type="sqlsrv">sql/updates/sqlsrv</schemapath>
        </schemas>
    </update>
	<languages>
        <language tag="da-DK">languages/da-DK.plg_jsnimageshow_themepile.ini</language>
        <language tag="de-DE">languages/de-DE.plg_jsnimageshow_themepile.ini</language>
        <language tag="en-GB">languages/en-GB.plg_jsnimageshow_themepile.ini</language>
        <language tag="fr-FR">languages/fr-FR.plg_jsnimageshow_themepile.ini</language>
        <language tag="it-IT">languages/it-IT.plg_jsnimageshow_themepile.ini</language>
        <language tag="ja-JP">languages/ja-JP.plg_jsnimageshow_themepile.ini</language>
        <language tag="nl-NL">languages/nl-NL.plg_jsnimageshow_themepile.ini</language>
        <language tag="pl-PL">languages/pl-PL.plg_jsnimageshow_themepile.ini</language>
        <language tag="pt-BR">languages/pt-BR.plg_jsnimageshow_themepile.ini</language>
        <language tag="pt-PT">languages/pt-PT.plg_jsnimageshow_themepile.ini</language>
        <language tag="ru-RU">languages/ru-RU.plg_jsnimageshow_themepile.ini</language>
	</languages>
</extension>